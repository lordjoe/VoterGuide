            <groupId>org.jsoup</groupId>
            <artifactId>jsoup</artifactId>
            <version>1.7.3</version>
        </dependency>

        <dependency>
            <groupId>org.votesmart</groupId>
            <artifactId>votesmart-client</artifactId>
            <version>1.1.2</version>
        </dependency>
        <dependency>
